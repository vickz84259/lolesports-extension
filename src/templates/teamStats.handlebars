{{#if showSpinner}}
<div class="spinner">
  <div class="rect1"></div>
  <div class="rect2"></div>
  <div class="rect3"></div>
  <div class="rect4"></div>
  <div class="rect5"></div>
</div>
{{else}}
<div class="blue">
  <div class="team-lineup">
    {{#each blueTeam}}
    {{> role index=@index }}
    {{> playerStats player=this}}
    {{/each}}
  </div>
</div>
<div class="red">
  <div class="team-lineup">
    {{#each redTeam}}
    {{> role index=@index }}
    {{> playerStats player=this}}
    {{/each}}
  </div>
  <span class="clearfix"></span>
</div>
{{/if}}